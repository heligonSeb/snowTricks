<section class="d-flex justify-content-between align-items-center">
    <h1>{{trick.name|upper}}</h1>

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="d-flex justify-content-end">
            <a href="{{ path('trick_edit', {id: trick.id}) }}" class="btn btn-success me-1 d-flex" title="Modifer">
                <i class="bi bi-pencil-square me-md-2"></i>
                <span class="d-none d-md-block">Modifier</span>
            </a>

            <a href="{{ path('trick_delete', {id: trick.id}) }}" class="btn btn-danger d-flex" title="Supprimer">
                <i class="bi bi-trash3 me-md-2"></i>
                <span class="d-none d-md-block">Supprimer</span>
            </a>
        </div>
    {% endif %}

</section>
