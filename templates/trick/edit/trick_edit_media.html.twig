<section class="my-4">
    {% if (trick.movies|length) or (trick.pictures|length) %}
        <div class="text-center my-2 d-md-none">
            <button class="btn btn-secondary col-12 col-md-6 see-more" type="button">Voir les médias</button>
        </div>
    {% endif %}

    <div class="div-media-collapse d-none d-md-block">
        {% if trick.movies|length %}
            <h2 class="h4 text-secondary border-bottom border-3 border-secondary">Vidéo:</h2>

            <div class="d-flex justify-content-start align-items-center flex-wrap">
                {% for movie in trick.movies %}
                    <div class="mx-1 position-relative">
                        {{ movie.balise | raw }}
                        <a href="{{ path('trick_delete_movie', {id: trick.id, movieId: movie.id}) }}" type="button" class="btn btn-danger position-absolute top-0 end-0">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
        
        {% if trick.pictures|length %}
            <h2 class="h4 text-secondary border-bottom border-3 border-secondary">Images:</h2>

            <div class="d-flex justify-content-start align-items-center flex-wrap">
                {% for picture in trick.pictures %}
                    <div class="mx-1 position-relative">    
                        <img src="{{ asset('pictures/tricks/mini/200x200-') }}{{ picture.name }}" />
                        <a href="{{ path('trick_delete_picture', {id: trick.id, pictureId: picture.id}) }}" type="button" class="btn btn-danger position-absolute top-0 end-0">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
<section>