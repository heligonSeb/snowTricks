<section class="row g-4 pb-4">
	{% for trick in tricks %}
		<div class="col col-md-6 col-xl-4 col-xxl-3">
			<div class="card" style="width: 18rem;">
				{% set picture = trick.pictures|first %}
				{% if picture %}
					<img src="{{ asset('pictures/tricks/mini/200x200-') }}{{ picture.name }}" class="card-img-top" alt="..." >
				{% else %}
					<img src="{{ asset('pictures/tricks/default.jpg') }}" class="card-img-top" alt="..." >
				{% endif %}

				<div class="card-body">
					<div class="d-flex justify-content-between align-items-center">
						<h5 class="card-title">{{ trick.name|title }}</h5>

						<div>
							<a href="{{ path('trick_edit', {id: trick.id}) }}" class="btn btn-success" title="Modifer">
								<i class="bi bi-pencil-square"></i>
							</a>

							<a href="{{ path('trick_delete', {id: trick.id}) }}" class="btn btn-danger" title="Supprimer">
								<i class="bi bi-trash3"></i>
							</a>
						</div>
					</div>

					<div class="fw-lighter mt-2">
						{{trick.description|u.truncate(50, '...')}}
					</div>

				</div>
			</div>
		</div>	
	{% endfor %}
</section>